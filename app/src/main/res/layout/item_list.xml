<?xml version="1.0" encoding="utf-8"?>

<!---на всякий случай добавила LinearLayout, для того, чтобы
потом можно было вынести заголовок и источник из карточки-->

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:background="?android:attr/selectableItemBackground"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/news_card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/ripple"
        android:orientation="vertical"
        app:cardCornerRadius="30dp"
        app:cardElevation="5dp">

        <ImageView
            android:id="@+id/news_image_view"
            android:layout_width="match_parent"
            android:layout_height="@dimen/imageWidth"
            android:contentDescription="@string/news_image_descriprion_text"
            android:minWidth="@dimen/imageMinWidth"
            android:scaleType="centerCrop"
            app:tintMode="add"
            tools:srcCompat="@tools:sample/avatars" />
    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <TextView
            android:id="@+id/news_pub_date_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:fontFamily="@font/elisabethische"
            android:textColor="@color/colorAccent"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/news_title_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/elisabethische"
            android:gravity="bottom"
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            tools:text="Заголовок" />

        <TextView
            android:id="@+id/news_link_text_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:fontFamily="@font/matador"
            android:gravity="end"
            android:textColor="@color/colorAccent"
            android:textSize="14sp"
            tools:text="Источник"
            tools:visibility="visible" />
    </LinearLayout>
</LinearLayout>

