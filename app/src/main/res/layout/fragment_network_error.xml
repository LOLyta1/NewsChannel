<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/network_error_text_view"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:text="@string/network_connection_lost_text"
        android:textColor="@android:color/background_light"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/network_reload_image_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:contentDescription="@string/dialog_update_button_text"
        app:layout_constraintBottom_toBottomOf="@+id/network_error_text_view"
        app:layout_constraintStart_toEndOf="@+id/network_error_text_view"
        app:layout_constraintTop_toTopOf="@+id/network_error_text_view"
        app:layout_constraintVertical_bias="0.45"
        app:srcCompat="@android:drawable/ic_popup_sync" />
</LinearLayout>